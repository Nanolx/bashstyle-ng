case ${1} in

	--help | -h | "")
		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "kel2cel" -s "convert 째K to 째C" -v "${BSNG_VERSION}" -y "${BSNG_YEAR}"\
			-o "number:|convert 째K to 째C"
	;;

	* )
		echo "scale=2; $1 - 273.15" | bc
	;;

esac

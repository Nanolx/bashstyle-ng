#!/bin/bash

GREEN="\033[01;32m"
RED="\033[01;31m"
WHITE="\033[01;37m"
YELLOW="\033[01;33m"
CYAN="\033[01;36m"
BLUE="\033[01;34m"
MAGENTA="\033[01;35m"


if [[ $TERM != *xterm* ]]; then
	SMOOTHBLUE=$BLUE
	ORANGE=$YELLOW
	CREAM=$MAGENTA
	SILVER=$WHITE
else
	SMOOTHBLUE="\033[01;38;5;111m"
	ORANGE="\033[01;38;5;714m"
	CREAM="\033[01;38;5;5344m"
	SILVER="\033[01;38;5;761m"
fi

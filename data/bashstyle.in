case ${1} in
	--python | -p ) shift
			echo "@PYTHON@"
			[[ "${@}" ]] && @PYTHON@ "${@}"
	;;

	* )
		export NO_AT_BRIDGE=1

		export BSNG_UI_PREFIX="@PREFIX@"
		export BSNG_UI_VERSION="@VERSION@"
		export BSNG_DATADIR="@DATADIR@"
		export PYTHONPATH="${PYTHONPATH}:@DATADIR@/bashstyle-ng/ui"

		@PYTHON@ @DATADIR@/bashstyle-ng/ui/bs-ng.py "${@}"
	;;
esac
